<%- include ('../../partials/header.ejs') %>
  <%- include ('../../partials/navbar.ejs') %>

    <div class="container">
      <hr>
      <div class="card">
        <div class="card-header">
          <h2>Cadastro de artigo</h2>
        </div>
        <div class="card-body">
          <form method="POST" action="/articles/save">
            <input class="form-control" type="text" name="title" id="title" placeholder="Defina o titulo do artigo">
            <br>
            <label>Categoria:</label>
            <select name="category" id="select" class="form-control">
              <% categories.forEach(categoria => { %>
                <option value="<%= categoria.id %>"><%= categoria.title %></option>
              <% }) %>
            </select>
            <br>
            <textarea class="form-control" placeholder="Defina o artigo aqui" name="body" id="article">

            </textarea>
            <br>
            <button class="btn btn-success">Cadastrar</button>
          </form>
        </div>
      </div>
    </div>

    <%- include ('../../partials/footer.ejs') %>